<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@slickcode.ddns.net:1521:MainDB</property>
        <property name="hibernate.connection.username">testuser</property>
        <property name="hibernate.connection.password">testpassword</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>


        <mapping class="warehouse.classes.Address"/>
        <mapping class="warehouse.classes.Company"/>
        <mapping class="warehouse.classes.Customer"/>
        <mapping class="warehouse.classes.Goods"/>
        <mapping class="warehouse.classes.Invoice"/>
        <mapping class="warehouse.classes.Item"/>
        <mapping class="warehouse.classes.Place"/>
        <mapping class="warehouse.classes.Supplier"/>
        <mapping class="warehouse.classes.Warehouse"/>

    </session-factory>
</hibernate-configuration>